<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Veta" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_hint</item>
        <item name="colorOnPrimary">@color/bg_color</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/blue_hint</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/blue_hint</item>
        <item name="colorControlNormal">@color/blue_hint</item>
        <item name="colorControlActivated">@color/bg_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>




        <!-- Status bar color. -->

        <!-- Customize your theme here. -->

    </style>

    <style name="BottomSheetDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="BottomDialogAnimation">

        <item name="android:windowEnterAnimation">@anim/slide_in_down</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>

    </style>



    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
<style name="ShapeAppearanceOverlay.App.CornerSize25Percent" parent="">
<item name="cornerSize">25%</item>
</style>
    <style name="VetaDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorPrimary">@color/blue_hint</item>
    </style>


    </resources>