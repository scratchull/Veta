<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.comp.veta.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >

        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_messages"
            app:destination="@id/navigation_messages"
            app:enterAnim="@anim/fui_slide_out_left" />
    </fragment>
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.comp.veta.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.comp.veta.ui.map.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/navigation_messages"
        android:name="com.comp.veta.ui.dashboard.MessagesView"
        android:label="Messages"
        tools:layout="@layout/fragment_messages" >

        <argument
            android:name="groupID"
            app:argType="string" />
    </fragment>
</navigation>